common:
	build: server: false
	browser: open: false, reload: false

	dist:
		client:
			paths:
				absolute: false

	exclude:
		default:
			client:
				files: true

	extra:
		copy:
			client: [
				'package.json'
			]

	inline:
		jsHtmlImports:
			client:
				enable: true

	minify:
		cacheBust: false
		html:
			templateCache: false
		client:
			js:
				es6: true
				fileName: 'rb-button.js'

demo:
	build: server: true
	browser: open: true, reload: true

	ports:
		server: 5004
		reload: 5005

	extra:
		copy:
			client: [
				'node_modules/**'
			]